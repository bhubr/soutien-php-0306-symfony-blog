{% block title %}All posts{% endblock %}

{% block body %}
 <h1> All posts! </h1>
{% for p in posts %}
    <div>
        <h2><a href="{{ path('post_details', { slug: p.slug }) }}">{{ p.title }}</a></h2>
        <p>{{ p.author.firstname }} {{ p.author.lastname }}</p>
        <p>{{ p.content }}</p>
    </div>
